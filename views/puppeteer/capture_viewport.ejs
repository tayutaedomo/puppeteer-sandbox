<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-12">
    <form method="post" action="/puppeteer/capture_viewport">
      <div class="form-group">
        <label>URL:</label>
        <input type="text" style="width: 70%" name="url" value="">
      </div>

      <div class="form-group">
        <label>Width:</label>
        <input type="number" name="width" value="480">
      </div>

      <div class="form-group">
        <label>Height:</label>
        <input type="number" name="height" value="320">
      </div>

      <button type="submit" class="btn btn-info">Capture</button>
    </form>
  </div>
</div>

